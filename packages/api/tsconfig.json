{
  "compilerOptions": {
    /* Base Options */
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "skipLibCheck": true,

    /* Strict Type-Checking */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,

    /* Module Resolution */
    "moduleResolution": "node",
    "esModuleInterop": true,

    /* Project Structure */
    "rootDir": "./src",
    "outDir": "./dist",

    
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}